<GridPane xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints fx:id="column0" halignment="CENTER" hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints fx:id="column1" halignment="LEFT" hgrow="ALWAYS" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="100.0" minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
    </rowConstraints>
   <children>
       <GridPane fx:id="playerLabelColorPane" GridPane.columnIndex="1">
           <children>
               <Label fx:id="playerListCellLabel" styleClass="default-medium" text="Label" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.valignment="CENTER" />
               <Pane fx:id="colorPane" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" />
           </children>
           <columnConstraints>
               <ColumnConstraints fx:id="column11" halignment="LEFT" hgrow="ALWAYS" maxWidth="210.0" minWidth="210.0" prefWidth="210.0" />
               <ColumnConstraints fx:id="column00" halignment="CENTER" hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints maxHeight="100.0" minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
           </rowConstraints>
       </GridPane>
       <StackPane fx:id="playerStackPane" GridPane.columnIndex="0">
           <children>
               <ImageView fx:id="playerListCellImageView" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER" />
               <ProgressIndicator fx:id="progressIndicator" progress="0.0" styleClass="default" StackPane.alignment="CENTER">
                   <StackPane.margin>
                       <Insets top="18.0" />
                   </StackPane.margin>
               </ProgressIndicator>
           </children>
       </StackPane>
   </children>
   <stylesheets>
      <URL value="@waitingRoomView.css" />
      <URL value="@../darkTheme.css" />
   </stylesheets>
</GridPane>
