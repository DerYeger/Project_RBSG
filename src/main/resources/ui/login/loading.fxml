<GridPane styleClass="gridpane-size" stylesheets="@loading.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" prefWidth="160.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="70.0" minHeight="70.0" prefHeight="70.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label fx:id="progressLabel" text="Warte auf Server..." styleClass="progress-label" />
      <ProgressIndicator fx:id="progressIndicator" progress="0.0" GridPane.columnIndex="1" styleClass="default-progress-indicator">
         <GridPane.margin>
            <Insets top="18.0" />
         </GridPane.margin>
      </ProgressIndicator>
   </children>
</GridPane>
