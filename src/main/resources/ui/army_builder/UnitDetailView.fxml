                </TilePane.margin>
            </Pane>
        </TilePane>
      <TextArea fx:id="unitDescription" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="60.0" style="-fx-padding: 0;" text="No Unit selected" wrapText="true">
         <styleClass>
            <String fx:value="root-background-color" />
            <String fx:value="unitPropertyContainer" />
         </styleClass>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
    </VBox>
   <stylesheets>
      <URL value="@../dark-theme.css" />
