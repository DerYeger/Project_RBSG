                </TilePane.margin>
            </Pane>
            <Pane layoutX="310.0" layoutY="10.0" prefHeight="60.0" prefWidth="100.0" styleClass="unitPropertyContainer">
                <TilePane.margin>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </TilePane.margin>
            </Pane>
