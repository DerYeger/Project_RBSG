<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root stylesheets="@../darkTheme.css" type="HBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se19.team_g.project_rbsg.army_builder.army.ArmyDetailController">
    <VBox HBox.hgrow="ALWAYS">
        <HBox alignment="BOTTOM_CENTER">
          <Label fx:id="armyNameLabel" style="-fx-font-weight: bold;" styleClass="default" text="Name" />
         <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
                 <Button mnemonicParsing="false" onAction="#onAddUnit" styleClass="icon-button" text="+" />
                 <Button mnemonicParsing="false" onAction="#onRemoveUnit" styleClass="icon-button" text="-" />
            </children>
         </HBox>
          <Label fx:id="armySizeLabel" style="-fx-font-weight: bold;" styleClass="default" text="0/10" />
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
        </HBox>
        <ListView fx:id="armySquadList" maxHeight="250.0" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" orientation="HORIZONTAL" styleClass="default" VBox.vgrow="NEVER" />
    </VBox>
</fx:root>
