<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <HBox alignment="CENTER" spacing="10.0">
           <children>
               <ImageView fx:id="playerImageView" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
               <Label fx:id="playerLabel" text="Player" />
           </children>
       </HBox>
       <HBox alignment="CENTER" spacing="10.0">
           <children>
               <Label fx:id="roundLabel" text="Round" />
               <Label fx:id="numberLabel" text="Number" />
           </children>
       </HBox>
       <HBox alignment="CENTER" spacing="10.0">
           <children>
               <ImageView fx:id="phaseImageView" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
               <Label text="Phase" />
           </children>
       </HBox>
   </children>
   <stylesheets>
      <URL value="@../darkTheme.css" />
      <URL value="@phaseLabel.css" />
   </stylesheets>
   <styleClass>
      <String fx:value="root-background-color" />
      <String fx:value="root" />
   </styleClass>
</VBox>
