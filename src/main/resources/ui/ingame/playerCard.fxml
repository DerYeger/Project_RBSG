<GridPane styleClass="elevation-2" maxHeight="50.0" prefHeight="50.0" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints fx:id="column0" halignment="CENTER" hgrow="SOMETIMES" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" />
        <ColumnConstraints fx:id="column1" halignment="LEFT" hgrow="ALWAYS" maxWidth="100" minWidth="80.5" prefWidth="100" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
    </rowConstraints>
   <children>
       <GridPane fx:id="playerLabelColorPane" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS">
           <children>
               <Pane fx:id="colorPane" prefHeight="50.0" prefWidth="40.0" GridPane.columnIndex="1" />
               <Label fx:id="playerNameLabel" maxHeight="50.0" styleClass="default-medium" text="Label" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" />
           </children>
           <columnConstraints>
               <ColumnConstraints fx:id="column11" halignment="LEFT" hgrow="ALWAYS" minWidth="100" />
               <ColumnConstraints fx:id="column00" halignment="CENTER" hgrow="SOMETIMES" maxWidth="25.0" minWidth="25.0" prefWidth="80.0" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
           </rowConstraints>
       </GridPane>
       <StackPane fx:id="playerStackPane" maxHeight="-Infinity" maxWidth="-Infinity" GridPane.columnIndex="0">
           <children>
               <ImageView fx:id="playerImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER" />
           </children>
       </StackPane>
   </children>
   <stylesheets>
      <URL value="@../darkTheme.css" />
   </stylesheets>
</GridPane>
