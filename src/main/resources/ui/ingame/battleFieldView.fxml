<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane"
           fx:controller="de.uniks.se19.team_g.project_rbsg.ingame.battlefield.BattleFieldController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox fx:id="root" spacing="10.0" stylesheets="@../darkTheme.css" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="118.0" spacing="10.0" styleClass="root-background-color">
                     <children>
                        <Button fx:id="leaveButton" mnemonicParsing="false" onAction="#leaveGame" styleClass="icon-button" />
                        <Button fx:id="zoomInButton" mnemonicParsing="false" onAction="#zoomIn" styleClass="icon-button" />
                        <Button fx:id="zoomOutButton" mnemonicParsing="false" onAction="#zoomOut" styleClass="icon-button" />
                        <Button fx:id="endPhaseButton" mnemonicParsing="false" onAction="#endPhase" styleClass="icon-button" />
                        <Button fx:id="ingameInformationsButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#openPlayerBar" styleClass="icon-button" />
                        <Button fx:id="chatButton" mnemonicParsing="false" onAction="#openChat" styleClass="icon-button" />
                        <Button fx:id="musicButton" mnemonicParsing="false" onAction="#toggleMusic" styleClass="icon-button" />
                        <Button fx:id="hpBarButton" mnemonicParsing="false" onAction="#toggleHpBar"
                                styleClass="icon-button" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <StackPane fx:id="battlefieldStackPane">
                     <children>
                        <AnchorPane fx:id="overlayAnchorPane" pickOnBounds="false">
                           <children>
                              <!-- TODO: Ordentlich machen-->
                              <HBox fx:id="playerBar" fillHeight="false" pickOnBounds="false" spacing="30.0" styleClass="playerCardBox" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <Pane fx:id="player1" styleClass="player-card" stylesheets="@playerList.css">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Pane>
                                    <Pane fx:id="player2" styleClass="player-card" stylesheets="@playerList.css">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Pane>
                                    <Pane fx:id="player3" styleClass="player-card" stylesheets="@playerList.css">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Pane>
                                    <Pane fx:id="player4" styleClass="player-card" stylesheets="@playerList.css">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Pane>
                                 </children>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </HBox>
                              <StackPane fx:id="chatPane" styleClass="chat-container" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0.0" />
                           </children></AnchorPane>
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <styleClass>
                  <String fx:value="root-background-color" />
                  <String fx:value="battlefieldContainer" />
               </styleClass>
            </VBox>
            <VBox fx:id="sidebar" HBox.hgrow="ALWAYS">
               <children>
               <HBox fx:id="ingameInformationHBox" alignment="CENTER" fillHeight="false" styleClass="roundInfoBox" stylesheets="@../darkTheme.css" HBox.hgrow="ALWAYS">
                  <children>
                     <Label fx:id="roundTextLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" right="5.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                     <Label fx:id="roundCountLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                     <ImageView fx:id="phaseImage" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
                     <Label fx:id="phaseLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" left="5.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                  </children>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
               </HBox>
                  <VBox fx:id="unitInformationContainer">
                     <styleClass>
                        <String fx:value="boxSpacing" />
                        <String fx:value="contentVBox" />
                     </styleClass></VBox>
                  <VBox>
                     <children>
                        <Button fx:id="actionButton" mnemonicParsing="false" styleClass="icon-with-text" text="Attack" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="icon-with-text"
                                text="Cancel" />
                     </children>
                     <styleClass>
                        <String fx:value="buttonBox" />
                        <String fx:value="contentVBox" />
                        <String fx:value="elevation-2" />
                     </styleClass>
                  </VBox>
                  <StackPane fx:id="miniMapStackPane" prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <Canvas fx:id="miniMapCanvas" height="200.0" width="200.0" StackPane.alignment="CENTER" />
                     </children>
                  </StackPane>
               </children>
               <styleClass>
                  <String fx:value="root-background-color" />
                  <String fx:value="sidebarContainer" />
               </styleClass>
            </VBox>
         </children>
         <stylesheets>
            <URL value="@../darkTheme.css" />
            <URL value="@battleFieldView.css" />
         </stylesheets>
      </HBox>
   </children>
</StackPane>
