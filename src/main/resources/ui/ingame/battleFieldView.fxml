<StackPane xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se19.team_g.project_rbsg.ingame.battlefield.BattleFieldController">
   <children>
      <VBox fx:id="root">
         <children>
            <HBox fx:id="menueBar" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="root-background-color" stylesheets="@menueBar.css" VBox.vgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                  <children>
                     <Button fx:id="leaveButton" alignment="CENTER" mnemonicParsing="false" onAction="#leaveGame" styleClass="icon-button">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="zoomInButton" alignment="CENTER" mnemonicParsing="false" onAction="#zoomIn" styleClass="icon-button">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="zoomOutButton" alignment="CENTER" mnemonicParsing="false" onAction="#zoomOut" styleClass="icon-button">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                  </children>
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
               </HBox>
               <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                  <children>
                     <Label fx:id="roundTextLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                     <Label fx:id="roundCountLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                     <Label fx:id="phaseLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                  </children>
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
               </HBox>
               <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                  <children>
                     <Button fx:id="ingameInformationsButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#openPlayerBar" styleClass="icon-button">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                  </children>
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
               </HBox>
            </HBox>
            <StackPane fx:id="ingameField">
               <children>
                  <HBox fx:id="playerBar" alignment="TOP_CENTER" layoutY="100.0" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Pane fx:id="player1" prefHeight="100.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Pane fx:id="player2" prefHeight="100.0" prefWidth="150.0" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS" />
                        <Pane layoutX="360.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
                        <Pane fx:id="player3" prefHeight="100.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS" />
                        <Pane layoutX="710.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
                        <Pane fx:id="player4" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS" />
                     </children>
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                  </HBox>
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
</StackPane>
