<StackPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se19.team_g.project_rbsg.ingame.battlefield.BattleFieldController">
   <children>
      <VBox fx:id="root" stylesheets="@../darkTheme.css">
         <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="118.0" styleClass="root-background-color">
            <Button fx:id="leaveButton" mnemonicParsing="false" onAction="#leaveGame" styleClass="icon-button">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="zoomInButton" mnemonicParsing="false" onAction="#zoomIn" styleClass="icon-button">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="zoomOutButton" mnemonicParsing="false" onAction="#zoomOut" styleClass="icon-button">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Pane fx:id="endPhaseButtonContainer" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="endPhaseButton" mnemonicParsing="false" onAction="#endPhase" prefWidth="18.0" styleClass="icon-button">
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Pane>
         </HBox>
      </VBox>
   </children>
</StackPane>
