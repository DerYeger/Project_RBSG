 !-->

<StackPane xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se19.team_g.project_rbsg.ingame.battlefield.BattleFieldController">
   <children>
      <VBox fx:id="root">
         <children>
            <HBox fx:id="menueBar" alignment="CENTER" prefHeight="80.0" styleClass="root-background-color" stylesheets="@menueBar.css" VBox.vgrow="ALWAYS">
               <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                  <children>
                     <Button fx:id="leaveButton" alignment="CENTER" mnemonicParsing="false" onAction="#leaveGame" styleClass="icon-button">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="zoomInButton" alignment="CENTER" mnemonicParsing="false" onAction="#zoomIn" styleClass="icon-button">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="zoomOutButton" alignment="CENTER" mnemonicParsing="false" onAction="#zoomOut" styleClass="icon-button">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                     <Pane fx:id="endPhaseButtonContainer" maxHeight="-Infinity" maxWidth="-Infinity">
                        <children>
                           <Button fx:id="endPhaseButton" alignment="CENTER" mnemonicParsing="false" onAction="#endPhase" styleClass="icon-button" stylesheets="@../darkTheme.css" />
                        </children>
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Pane>
                     <Button fx:id="ingameInformationsButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#openPlayerBar" styleClass="icon-button">
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                     <Button fx:id="mapButton" mnemonicParsing="false" onAction="#toggleMap" styleClass="icon-button" >
                        <HBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </HBox.margin>
                     </Button>
                  </children>
                  <HBox.margin>
                     <Insets left="10.0" />
                  </HBox.margin>
               </HBox>
               <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
               <HBox fx:id="ingameInformationHBox" alignment="CENTER" fillHeight="false" maxHeight="30.0" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="250.0" stylesheets="@../darkTheme.css" HBox.hgrow="ALWAYS">
                  <children>
                     <Label fx:id="roundTextLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" right="5.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                     <Label fx:id="roundCountLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                     <ImageView fx:id="phaseImage" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
                     <Label fx:id="phaseLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                           <Insets bottom="10.0" left="5.0" top="10.0" />
                        </HBox.margin>
                     </Label>
                  </children>
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
               </HBox>
            </HBox>
            <StackPane fx:id="battlefieldStackPane" alignment="TOP_CENTER">
               <children>
                  <AnchorPane fx:id="overlayAnchorPane" pickOnBounds="false" StackPane.alignment="TOP_CENTER">
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                     <children>
                        <HBox fx:id="playerBar" maxHeight="-Infinity" prefWidth="150.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="1.0">
                           <children>
                              <Pane fx:id="player1" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="50.0" right="25.0" />
                                 </HBox.margin>
                              </Pane>
                              <Pane fx:id="player2" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="25.0" right="25.0" />
                                 </HBox.margin>
                              </Pane>
                              <Pane fx:id="player3" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="50.0" right="50.0" />
                                 </HBox.margin>
                              </Pane>
                              <Pane fx:id="player4" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="25.0" right="50.0" />
                                 </HBox.margin>
                              </Pane>
                           </children>
                        </HBox>
                        <StackPane fx:id="miniMapStackPane" styleClass="miniMapBox" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
                           <children>
                              <Canvas fx:id="miniMapCanvas" height="250.0" styleClass="miniMap" width="250.0" StackPane.alignment="CENTER" />
                           </children>
                        </StackPane>
                     </children>
                  </AnchorPane>
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
</StackPane>
