<StackPane xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se19.team_g.project_rbsg.ingame.battlefield.BattleFieldController">
   <children>
      <VBox fx:id="root" stylesheets="@../darkTheme.css">
         <HBox alignment="CENTER_LEFT" styleClass="root-background-color">
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="leaveButton" mnemonicParsing="false" onAction="#leaveGame" styleClass="icon-button">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="zoomInButton" mnemonicParsing="false" onAction="#zoomIn" styleClass="icon-button">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="zoomOutButton" mnemonicParsing="false" onAction="#zoomOut" styleClass="icon-button">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Label">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Label">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Label">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="ingameInformationsButton" mnemonicParsing="false" text="Button">
                     <HBox.margin>
                        <Insets bottom="1.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </HBox>
         <StackPane fx:id="ingameField" prefHeight="150.0" prefWidth="200.0">
            <children>
               <HBox fx:id="playerBar" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Pane fx:id="player1" prefHeight="200.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css" />
                     <Pane fx:id="empty1" prefHeight="200.0" prefWidth="200.0" />
                     <Pane fx:id="player2" prefHeight="200.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css" />
                     <Pane fx:id="empty2" prefHeight="200.0" prefWidth="200.0" />
                     <Pane fx:id="player3" layoutX="110.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css" />
                     <Pane fx:id="empty21" layoutX="109.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" />
                     <Pane fx:id="player4" layoutX="170.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css" />
                  </children>
               </HBox>
            </children>
         </StackPane>
      </VBox>
   </children>
</StackPane>
