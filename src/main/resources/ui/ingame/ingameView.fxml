<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se19.team_g.project_rbsg.ingame.IngameViewController">
   <children>
      <VBox fx:id="root" stylesheets="@../darkTheme.css">
         <HBox fx:id="menueBar" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="root-background-color" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="leaveButton" alignment="CENTER" mnemonicParsing="false" onAction="#leaveGame" styleClass="icon-button">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="zoomInButton" alignment="CENTER" mnemonicParsing="false" onAction="#zoomIn" styleClass="icon-button">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="zoomOutButton" alignment="CENTER" mnemonicParsing="false" onAction="#zoomOut" styleClass="icon-button">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </HBox>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="roundTextLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="roundCountLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin></Label>
                  <Label fx:id="phaseLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="roundCount" stylesheets="@menueBar.css" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="ingameInformationsButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onMousePressed="#openPlayerBar" styleClass="icon-button">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </HBox>
         </HBox>
         <HBox fx:id="playerBar" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Pane fx:id="player1" prefHeight="200.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css">
                  <padding>
                     <Insets right="10.0" />
                  </padding></Pane>
               <Pane fx:id="player2" prefHeight="200.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css" HBox.hgrow="ALWAYS">
                  <padding>
                     <Insets right="10.0" />
                  </padding></Pane>
               <Pane fx:id="player3" prefHeight="200.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css">
                  <padding>
                     <Insets right="10.0" />
                  </padding></Pane>
               <Pane fx:id="player4" prefHeight="200.0" prefWidth="200.0" styleClass="player-card" stylesheets="@playerList.css" />
            </children>
         </HBox>
      </VBox>
   </children>
</StackPane>
