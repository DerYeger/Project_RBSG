<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane stylesheets="@waiting-room.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.se19.team_g.project_rbsg.waiting_room.WaitingRoomViewController">
    <children>
        <AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button mnemonicParsing="false" onAction="#toggleSound" AnchorPane.leftAnchor="60.0" AnchorPane.topAnchor="10.0" styleClass="bcolor">
                    <graphic>
                        <ImageView fx:id="musicImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
                    </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#leaveRoom" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" styleClass="bcolor">
                    <graphic>
                        <ImageView fx:id="backImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
                    </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#showInfo" AnchorPane.leftAnchor="110.0" AnchorPane.topAnchor="10.0" styleClass="bcolor">
                    <graphic>
                        <ImageView fx:id="infoImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
                    </graphic>
                </Button>
                <Pane fx:id="player1Pane" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="90.0" styleClass="player-card-size"/>
                <Pane fx:id="player2Pane" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="90.0" styleClass="player-card-size"/>
                <Pane fx:id="player3Pane" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="220.0" styleClass="player-card-size"/>
                <Pane fx:id="player4Pane" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="220.0" styleClass="player-card-size"/>
                <Pane fx:id="chatPane" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="360.0" styleClass="bcolor"/>
                <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
                    <children>
                        <Pane fx:id="mapPreviewPane" StackPane.alignment="TOP_CENTER" minHeight="290" maxHeight="290" minWidth="290" maxWidth="290" styleClass="bcolor"/>
                    </children>
                </StackPane>
            </children>
        </AnchorPane>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0">
            <children>
                <Pane fx:id="armiesPane" StackPane.alignment="CENTER_RIGHT" minWidth="80" maxWidth="80" minHeight="580" maxHeight="580" styleClass="bcolor"/>
            </children>
        </StackPane>
    </children>
</AnchorPane>
